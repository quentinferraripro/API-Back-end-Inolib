generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model ContactCategory {
  id       String           @id @default(cuid())
  name     String           @unique
  requests ContactRequest[]
}

model ContactRequest {
  id          String          @id @default(cuid())
  categoryId  String
  category    ContactCategory @relation(fields: [categoryId], references: [id])
  companyName String
  firstName   String
  lastName    String
  email       String
  phone       String
  message     String          @db.Text
  createdAt   DateTime        @default(now())

  @@index([categoryId])
}

model Document {
  id       String   @id @default(cuid())
  name     String
  category String
  date     DateTime @default(now())
  type     String
}

model User {
  id        String  @id @default(cuid())
  firstName String
  lastName  String
  email     String
  phone     String?
  password  String?
}
